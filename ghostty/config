command = /usr/bin/fish --login --interactive

# Interface and font
theme = ChallengerDeep
font-family = Iosevka SS14 Extended
font-style = Medium
font-style-bold = Bold
font-style-italic = Medium Italic
font-style-bold-italic = Bold Italic
window-theme = dark
window-colorspace = display-p3

# Background and opacity
background-opacity = 0.9
unfocused-split-opacity = 0.55
unfocused-split-fill = 000000
split-divider-color = a9a9a9

# Window and padding
window-decoration = true
window-padding-x = 5
window-padding-y = 5
window-padding-balance = true
window-subtitle = working-directory
window-save-state = always
window-inherit-working-directory = false

# Cursor and mouse
cursor-style = block
cursor-click-to-move = true
mouse-hide-while-typing = true
mouse-scroll-multiplier = 3

# Shell and integration
shell-integration = fish
shell-integration-features = sudo,title,no-cursor
wait-after-command = true
scrollback-limit = 1000000
term = xterm-256color

# Clipboard
clipboard-paste-protection = true

# Keybindings - Window and configuration
keybind = ctrl+n=new_window
keybind = super+r=reload_config

# Keybindings - Splits
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right
keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom

# Keybindings - Tabs
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# Keybindings - Clipboard
keybind = performable:ctrl+c=copy_to_clipboard
keybind = performable:ctrl+v=paste_from_clipboard
